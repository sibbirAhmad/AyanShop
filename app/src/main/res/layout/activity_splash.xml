<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_back_ground"
    tools:context=".SplashActivity">
    <RelativeLayout
        android:id="@+id/adTopBanner"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



    <RelativeLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            app:lottie_rawRes="@raw/lottie_splash_yellow"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.airbnb.lottie.LottieAnimationView>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/image_title"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_welcome_2"

            />




    </RelativeLayout>





    <in.codeshuffle.typewriterview.TypeWriterView
        android:id="@+id/titleTV"
        android:text="Happy Shopping "
        android:visibility="gone"
        android:textColor="@color/menu_item_text_color"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginBottom="90dp"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/double_bubble_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </in.codeshuffle.typewriterview.TypeWriterView>
    <TextView
        android:id="@+id/sloganTv"
        android:text="One of the Best Shop"
        android:visibility="gone"
        android:textColor="@color/menu_item_text_color"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/double_bubble_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</RelativeLayout>